{
  "name": "tvault-client",
  "private": true,
  "version": "0.1.0-beta",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "preview": "vite preview",
    "tauri": "tauri",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,json}\" && yarn lint:eslint --fix",
    "lint:eslint": "eslint src/**/*.{ts,tsx,js,json}",
    "tauri:dev": "yarn tauri dev",
    "build": "yarn build:dev",
    "build:dev": "tsc && vite build --mode development",
    "build:prod": "tsc && vite build --mode production",
    "tauri:build": "yarn tauri build",
    "build:all": "yarn build:mac-arm && yarn build:mac-intel && yarn build:win-32 && yarn build:win-64",
    "build:mac-arm": "yarn tauri build --target aarch64-apple-darwin",
    "build:mac-intel": "yarn tauri build --target x86_64-apple-darwin",
    "build:win-32": "yarn tauri build --target i686-pc-windows-msvc",
    "build:win-64": "yarn tauri build --target x86_64-pc-windows-msvc",
    "build:mac": "yarn build:mac-arm && yarn build:mac-intel",
    "build:win": "yarn build:win-32 && yarn build:win-64",
    "release:tag": "git tag v$(node -p \"require('./package.json').version\") && git push --tags"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^2.8.2",
    "@tailwindcss/vite": "^4.1.8",
    "@tauri-apps/api": "^2",
    "@tauri-apps/plugin-app": "^2.0.0-alpha.1",
    "@tauri-apps/plugin-dialog": "~2",
    "@tauri-apps/plugin-fs": "^2.4.0",
    "@tauri-apps/plugin-opener": "^2",
    "@tauri-apps/plugin-process": "^2.3.0",
    "@tauri-apps/plugin-store": "^2",
    "@tauri-apps/plugin-updater": "^2.9.0",
    "clsx": "^2.1.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-intl": "^7.1.11",
    "react-redux": "^9.2.0",
    "react-router-dom": "^7.6.1",
    "react-toastify": "^11.0.5",
    "react-use": "^17.6.0",
    "redux": "^5.0.1",
    "tailwind": "^4.0.0",
    "tailwind-merge": "^3.3.1",
    "zod": "^3.25.46"
  },
  "devDependencies": {
    "@eslint/js": "^9.28.0",
    "@tauri-apps/cli": "^2",
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/node": "^22.15.29",
    "@types/react": "^18.3.1",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.4",
    "eslint": "^9.28.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.2.0",
    "prettier": "^3.5.3",
    "sass-embedded": "^1.89.1",
    "sharp": "^0.34.2",
    "svgo": "^3.3.2",
    "typescript": "~5.6.2",
    "typescript-eslint": "^8.33.0",
    "vite": "^6.0.3",
    "vite-plugin-image-optimizer": "^1.1.8"
  }
}
