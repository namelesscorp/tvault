{
	"$schema": "../gen/schemas/desktop-schema.json",
	"identifier": "default",
	"description": "Capability for the main window",
	"windows": ["main"],
	"permissions": [
		"core:default",
		"opener:default",
		"fs:default",
		"dialog:default",
		"store:default",
		"core:window:allow-minimize",
		"core:window:allow-show",
		"core:window:allow-close",
		"core:window:allow-start-dragging",
		{
			"identifier": "opener:allow-open-path",
			"allow": [{ "path": "**" }]
		},
		{
			"identifier": "fs:scope-temp-recursive",
			"allow": [{ "path": "$TEMP/tvault_mount_*" }]
		},
		{
			"identifier": "fs:allow-temp-write-recursive"
		}
	]
}
