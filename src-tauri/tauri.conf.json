	"productName": "Trust Vault",
	"version": "0.1.0-beta",
	"identifier": "tech.nldev.tvault-client",
	"build": {
		"beforeDevCommand": "yarn dev",
		"devUrl": "http://localhost:1420",
		"beforeBuildCommand": "yarn build:prod",
		"frontendDist": "../build"
	},
	"app": {
		"macOSPrivateApi": true,
		"windows": [
			{
				"title": "Trust Vault",
				"width": 1200,
				"height": 800,
				"resizable": false,
				"decorations": false,
				"transparent": true,
				"shadow": false
			}
		],
		"security": {
			"csp": null
		}
	},
	"bundle": {
		"active": true,
		"targets": ["dmg", "app", "nsis"],
		"createUpdaterArtifacts": true,
