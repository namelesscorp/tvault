{
	"$schema": "https://schema.tauri.app/config/2",
	"productName": "tvault-client",
	"version": "0.1.0",
	"identifier": "tech.nldev.tvault-client",
	"build": {
		"beforeDevCommand": "yarn dev",
		"devUrl": "http://localhost:1420",
		"beforeBuildCommand": "yarn build",
		"frontendDist": "../build"
	},
	"app": {
		"windows": [
			{
				"title": "tvault-client",
				"width": 1200,
				"height": 800,
				"resizable": false,
				"decorations": false,
				"transparent": false
			}
		],
		"security": {
			"csp": null
		}
	},
	"bundle": {
		"active": true,
		"targets": "all",
		"icon": [
			"icons/32x32.png",
			"icons/128x128.png",
			"icons/128x128@2x.png",
			"icons/icon.icns",
			"icons/icon.ico"
		],
		"externalBin": ["./binaries/tvault-core"]
	}
}
